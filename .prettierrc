{
  "semi": true,                     
  "singleQuote": false,             
  "trailingComma": "es5",           
  "tabWidth": 2,                    
  "printWidth": 100,               
  "bracketSpacing": true,         
  "arrowParens": "always",          
  "endOfLine": "lf",               
  "jsxSingleQuote": false,          
  "jsxBracketSameLine": false,     
  "quoteProps": "as-needed",        
  "proseWrap": "preserve",          
  "pluginSearchDirs": ["."],        
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindConfig": "./tailwind.config.js",   
  "embeddedLanguageFormatting": "auto"       
}
